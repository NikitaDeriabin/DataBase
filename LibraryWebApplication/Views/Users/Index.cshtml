@model IEnumerable<LibraryWebApplication.Models.User>

<h2 class="text-center">Список користувачів</h2>

<a asp-action="Create">Додати користувача</a>

<table class="table">
    <tr><th>Email</th><th>Дата народження</th><th></th></tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Email</td>
            <td>@user.Year</td>
            <td>
                <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id">Редагувати</a>
                    <button type="submit" class="btn btn-sm btn-danger">Видалити</button>
                </form>
            </td>
        </tr>
    }
</table>